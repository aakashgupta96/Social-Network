<section id="mainSection" id="top">
  <aside id="mainAside" class="userInfo">
    
      <div class="card">
        <div class="card-content" style="padding: 0px;">
          <%= image_tag current_user.profile_picture_url, class: "profile_picture" %>
        </div>
        <div class="card-tabs">
          <ul class="tabs">
            <li class="tab"><a class="active" href="#username">Name</a></li>
            <li class="tab"><a href="#followers">Followers</a></li>
            <li class="tab"><a href="#following">Following</a></li>
          </ul>
        </div>
        <div class="card-content grey lighten-4">
          <div id="username"><%=current_user.name%></div>
          <div id="followers"><%=current_user.followers.count%></div>
          <div id="following"><%=current_user.followees.count%></div>
        </div>
      </div>
  </aside>
  <main id="mainMain">
		<div class="form white hoverable z-depth-2">
			<p class="form-heading">Update Profile Picture</p>
			</br>
			<%= form_tag url_for(controller: 'home', action: 'save_picture'), :multipart => true do %>
					<div class="file-field input-field col s12 m6 l6">
		        <div class="btn">
		          <span>Profile Picture</span>
		          <%= file_field_tag :profile_picture, {class: 'file_select', onchange: "validateImageFiles(this);", data: { max_file_size: 2.megabytes} }%>
		        </div>
		        <div class="file-path-wrapper">
		          <input class="file-path validate" type="text">
		        </div>
		      </div>

			    <%#= file_field_tag :profile_picture, required: true %>
			    <%= submit_tag "Update" %>
			<% end %>
		</div>
	</main>
</section>
